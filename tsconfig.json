{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "strict": true,
    "composite": true,
    "target": "es2023",
    "module": "Preserve",
    "baseUrl": ".",
    "rootDir": ".",
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "allowArbitraryExtensions": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "declarationMap": true,
    "sourceMap": true,
    "declarationDir": "./types",
    "verbatimModuleSyntax": true,
    "plugins": [
      { "name": "typescript-plugin-css-modules", "useConfig": true },
      {
        "name": "ts-lit-plugin",
        "strict": true
      }
    ]
  },
  "include": ["src/**/*.mts", "src/**/*.ts", "src/styles/*.css"]
}
